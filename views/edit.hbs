<body>
    {{!-- Success Message --}}
    {{#if success}}
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path
                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
    </svg>
    <div class="alert alert-success d-flex align-items-center justify-content-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="30" role="img" aria-label="Success:">
            <use xlink:href="#check-circle-fill" />
        </svg>
        <div>
            <h3>{{message}}</h3>

            <table>
                <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Genre</th>
                    {{#if song.album}}
                    <th>Album</th>
                    {{/if}}
                </tr>
                <tr>
                    <td>{{song.title}}</td>
                    <td>{{song.artist}}</td>
                    <td>{{song.genre}}</td>
                    {{#if song.album}}
                    <td>{{song.album}}</td>
                    {{/if}}
                </tr>
            </table>
        </div>
    </div>

    {{/if}}

    {{!-- Failure Message --}}
    {{#if error}}
    <div class="alert alert-danger d-flex align-items-center justify-content-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" id="svg" width="24" height="24" fill="currentColor"
            class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
            aria-label="Warning:">
            <path
                d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div>
            <h4><strong>{{message}}</strong></h4>
        </div>
    </div>

    {{/if}}

    <div id="formWrapper">
        <form action="{{endpoint}}" method="{{method}}" class="forms" role="form" name="myForm"
            enctype="application/x-www-form-urlencoded">
            <legend style="margin-bottom:2rem; !important">{{legend}}</legend>
            <input type="hidden" name="_method" value="PUT">
            {{#each formfields}}
            <label for="{{field}}">{{pretty}}</label>
            {{!-- {{#if album}}
            <input type="text" name="{{field}}"><br> --}}
            {{!-- {{#if title}}
            <select name="oldTitle">
                {{#each titles}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select><br>
            {{else if genre}}
            <select name="newGenre">
                {{#each genres}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select><br>
            {{else}} --}}
            <input type="text" id="{{field}}" name="{{field}}" required><br><br>
            {{!-- {{/if}} --}}
            {{/each}}
            <label for="genre">Genres</label>
            <select name="newGenre">
                {{#each newGenre}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select><br>

            
            <br><button type="submit" id="marginTop" class="btn btn-outline-light">Submit</button>
        </form>

        <img class="formImg" style="height:450px !important;" src="https://images.pexels.com/photos/733767/pexels-photo-733767.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="">
    </div>

</body>